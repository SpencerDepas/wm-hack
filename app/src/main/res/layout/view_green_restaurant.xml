<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:bind="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_margin="8dp"
            android:id="@+id/cardRestaurant"
            app:cardCornerRadius="8dp"
            android:background="@color/cardview_dark_background"
            android:layout_height="150dp">


        <LinearLayout android:layout_width="match_parent"
                      android:orientation="horizontal"
                      android:layout_height="match_parent">


            <android.support.v7.widget.CardView
                    android:layout_width="@dimen/picture_size"
                    android:layout_height="@dimen/picture_size"
                    app:cardCornerRadius="6dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="20dp"
                    android:elevation="10dp">


                <ImageView android:layout_width="@dimen/picture_size"
                           android:layout_alignParentStart="true"
                           android:scaleType="centerCrop"
                           android:id="@+id/restaurantImage"
                           android:src="@drawable/hot_pot"
                           android:layout_height="@dimen/picture_size"/>

            </android.support.v7.widget.CardView>


            <RelativeLayout android:layout_width="match_parent"
                            android:layout_margin="8dp"
                            android:orientation="vertical"
                            android:layout_height="match_parent">

                <LinearLayout android:layout_width="match_parent"
                              android:orientation="vertical"
                              android:layout_gravity="center_vertical"
                              android:layout_marginTop="8dp"
                              android:layout_height="wrap_content">

                    <RelativeLayout android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                        <TextView android:layout_width="wrap_content"
                                  android:text="Ox Ass Hotpot"
                                  android:layout_marginTop="4dp"
                                  android:textStyle="bold"
                                  android:id="@+id/restaurantName"
                                  android:textSize="20sp"
                                  android:layout_marginLeft="4dp"
                                  android:textColor="@color/primary_text"
                                  android:layout_height="wrap_content"/>

                        <ImageView android:layout_width="30dp"
                                   android:alpha=".5"
                                   android:layout_alignParentEnd="true"
                                   android:src="@drawable/ic_baseline_bookmark_border_24px"
                                   android:layout_height="30dp"/>

                    </RelativeLayout>

                    <RelativeLayout android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                        <ImageView android:layout_width="20dp"
                                   android:id="@+id/cuisine"
                                   android:alpha=".3"
                                   android:layout_alignParentStart="true"
                                   android:src="@drawable/ic_baseline_description_24px"
                                   android:layout_height="20dp"/>


                        <TextView android:layout_width="wrap_content"
                                  android:layout_marginLeft="4dp"
                                  android:text="Food Type: Ass hotpot"
                                  android:id="@+id/foodType"
                                  android:layout_toRightOf="@+id/cuisine"
                                  android:textStyle="bold"
                                  android:textSize="17sp"
                                  android:layout_height="wrap_content"/>


                    </RelativeLayout>


                    <RelativeLayout android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                        <ImageView android:layout_width="20dp"
                                   android:alpha=".3"
                                   android:layout_marginTop="2dp"
                                   android:id="@+id/location_icon"
                                   android:layout_alignParentStart="true"
                                   android:src="@drawable/ic_baseline_location_on_24px"
                                   android:layout_height="20dp"/>


                        <TextView android:layout_width="wrap_content"
                                  android:layout_marginLeft="4dp"
                                  android:text="Distance 1.4 miles"
                                  android:layout_toRightOf="@+id/location_icon"
                                  android:textStyle="bold"
                                  android:textSize="17sp"
                                  android:id="@+id/distance"
                                  android:layout_height="wrap_content"/>


                    </RelativeLayout>

                    <RelativeLayout android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                        <ImageView android:layout_width="25dp"
                                   android:id="@+id/rating_icon"
                                   android:layout_marginLeft="-3dp"
                                   android:layout_alignParentStart="true"
                                   android:src="@drawable/ic_baseline_star_rate_18px"
                                   android:layout_height="25dp"/>


                        <TextView android:layout_width="wrap_content"
                                  android:layout_marginLeft="4dp"
                                  android:text="4.7 Green rating"
                                  android:layout_toRightOf="@+id/rating_icon"
                                  android:textStyle="bold"
                                  android:textSize="17sp"
                                  android:id="@+id/greenRating"
                                  android:layout_height="wrap_content"/>


                    </RelativeLayout>


                </LinearLayout>


            </RelativeLayout>


        </LinearLayout>


    </android.support.v7.widget.CardView>

</layout>
